{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
      Datos de nuevo responsable
{% endblock %}

{% block body -%}
<div class="row">
    <div class="col-lg-6">
    {{ form_start(form) }}
    {{ form_errors(form) }}

        <div class="form-group">

            {{ form_label(form.nombre,'Nombre:') }}
            {{ form_errors(form.nombre) }}
            {{ form_widget(form.nombre,{'attr':{'class':'form-control'}}) }}

        </div>
        <div class="form-group">

            {{ form_label(form.apellidos,'apellidos:') }}
            {{ form_errors(form.apellidos) }}
            {{ form_widget(form.apellidos,{'attr':{'class':'form-control'}}) }}

        </div>

        <div class="form-group">

            {{ form_label(form.telefono,'telefono:') }}
            {{ form_errors(form.telefono) }}
            {{ form_widget(form.telefono,{'attr':{'class':'form-control'}}) }}

        </div>
        <div class="form-group">

            {{ form_label(form.puesto,'puesto:') }}
            {{ form_errors(form.puesto) }}
            {{ form_widget(form.puesto,{'attr':{'class':'form-control'}}) }}

        </div>
        <div class="form-group">

            {{ form_label(form.email,'email:') }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}

        </div>


    <div>
        {#{{ form_label(form.submit,'Guardar') }}#}
        {{ form_widget(form.submit,{'label':'Guardar'},{'attr':{'class':'btn btn-success'}}) }}
        <br>
    </div>
    {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

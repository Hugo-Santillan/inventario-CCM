{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
    Datos de nuevo responsable
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div class="chat-panel panel panel-primary chat-boder chat-panel-head">
                <div class="panel-heading">
                    Datos del bien
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <div class="form-group col-lg-6">

                            {{ form_label(form.nombre,'Nombre:') }}
                            {{ form_errors(form.nombre) }}
                            {{ form_widget(form.nombre,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="form-group col-lg-6">

                            {{ form_label(form.apellidos,'apellidos:') }}
                            {{ form_errors(form.apellidos) }}
                            {{ form_widget(form.apellidos,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form-group col-lg-6">
                            {{ form_label(form.telefono,'telefono:') }}
                            {{ form_errors(form.telefono) }}
                            {{ form_widget(form.telefono,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="form-group col-lg-6">
                            {{ form_label(form.puesto,'puesto:') }}
                            {{ form_errors(form.puesto) }}
                            {{ form_widget(form.puesto,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="form-group col-lg-6">
                            {{ form_label(form.email,'email:') }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="form-group col-lg-6">
                            {{ form_label(form.titulo,'Titulo:') }}
                            {{ form_errors(form.titulo) }}
                            {{ form_widget(form.titulo,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="form-group col-lg-6">
                            {{ form_label(form.ubicacion,'Ubicacion:') }}
                            {{ form_errors(form.ubicacion) }}
                            {{ form_widget(form.ubicacion,{'attr':{'class':'select2 form-control','placeholder':'Requerido: responsable o lista de responsables'}}) }}
                        </div>


                    </div></div></div>{{ form_widget(form.submit) }}{{ form_end(form) }}
        </div></div>
{% endblock %}

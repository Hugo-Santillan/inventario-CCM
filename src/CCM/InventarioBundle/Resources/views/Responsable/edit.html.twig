{% extends 'InventarioBundle::layout.html.twig' %}

{% block titulo %}
    Edicion de responsable
{% endblock %}

{% block body -%}

    <div class="row">
        <div class="col-lg-6">

            {{ form_start(edit_form) }}
            {{ form_errors(edit_form) }}

            <div class="form-group">

                {{ form_label(edit_form.nombre,'Nombre:') }}
                {{ form_errors(edit_form.nombre) }}
                {{ form_widget(edit_form.nombre,{'attr':{'class':'form-control'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(edit_form.apellidos,'Apellidos:') }}
                {{ form_errors(edit_form.apellidos) }}
                {{ form_widget(edit_form.apellidos,{'attr':{'class':'form-control'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(edit_form.telefono,'Telefono:') }}
                {{ form_errors(edit_form.telefono) }}
                {{ form_widget(edit_form.telefono,{'attr':{'class':'form-control'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(edit_form.puesto,'Puesto:') }}
                {{ form_errors(edit_form.puesto) }}
                {{ form_widget(edit_form.puesto,{'attr':{'class':'form-control'}}) }}

            </div>
            <div class="form-group">

                {{ form_label(edit_form.email,'Email:') }}
                {{ form_errors(edit_form.email) }}
                {{ form_widget(edit_form.email,{'attr':{'class':'form-control'}}) }}

            </div>
            <div class="form-group">
                {{ form_widget(edit_form.submit,{'label':'Actualizar','attr':{'class':'btn btn-default'}}) }}
            </div>
            {{ form_end(edit_form) }}

            <p>
                {{ form(delete_form) }}
                <a href="{{ path('responsable') }}" class="btn btn-default" >Ir a lista</a>
                <a href="{{ path('responsable_show', { 'id': entity.id }) }}" class="btn btn-default" >Mostrar</a>
            </p>
        </div>
    </div>
{% endblock %}

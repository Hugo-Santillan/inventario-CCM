{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
    <i class="fa fa-users"></i> Responsables
    <p class="text-right">

        <a href="{{ path('responsable_new') }}" class="btn btn-success btn-sm" role="button">Crear Responsable</a>
    </p>
{% endblock %}

{% block body -%}
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>

    {% endfor %}

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Telefono</th>
                <th>Puesto</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('responsable_show', { 'id': entity.id }) }}">{{ entity.nombre }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.puesto }}</td>
                <td>{{ entity.email }}</td>
                <td><a href="{{ path('responsable_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-xs">editar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}

{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
    <i class="fa fa-archive"></i> Categorias de bienes
{% endblock %}
{% block body -%}

    <table class="table table-striped table-bordered table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('categoria_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categoria_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


        <ul>
        <li>
            <a href="{{ path('categoria_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

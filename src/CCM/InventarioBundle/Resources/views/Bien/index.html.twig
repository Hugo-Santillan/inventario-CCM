{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
    <i class="fa fa-laptop"></i> Bienes
    <p class="text-right">

        <a href="{{ path('bien_new') }}" class="btn btn-success btn-sm" role="button">Crear bien</a>
    </p>
{% endblock %}


{% block body -%}
    {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flashMessage }}
        </div>

    {% endfor %}

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
        <tr>
            <th>Descripcion</th>
            <th>Comentario</th>
            <th>Ubicacion</th>
            <th>Validofis</th>
            <th>Tipoadq</th>
            <th>Estatus</th>
            <th>Foto</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('bien_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td><a href="{{ path('bien_show', { 'id': entity.id }) }}">{{ entity.descripcion }}</a></td>
            <td>{{ entity.comentario }}</td>
            <td>{{ entity.ubicacion }}</td>
            <td>{% if entity.validoFis %} Si {% else %} No {% endif %}</td>
            <td>{{ entity.tipoAdq }}</td>
            <td>{% if entity.estatus %} Activo {% else %} Inactivo {% endif %}</td>
            <td>{{ entity.foto }}</td>{#
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modified %}{{ entity.modified|date('Y-m-d H:i:s') }}{% endif %}</td>#}

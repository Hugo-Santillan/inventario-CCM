{% extends 'InventarioBundle::layout.html.twig' %}
{% block titulo %}
    <i class="fa fa-search"></i> BÃºsqueda multicampo
{% endblock %}

{% block body -%}


    {{ form_start(form, {'action': path('bien_busqueda'), 'method': 'POST','class': 'form-horizontal'}) }}
    {{ form_errors(form) }}
    <div class="form-group col-lg-6">
        {{ form_label(form.descripcion,'Descripcion:') }}
        {{ form_errors(form.descripcion) }}
        {{ form_widget(form.descripcion,{'attr':{'class':'form-control'}}) }}
    </div>
    <div class="form-group col-lg-6">
        {{ form_label(form.responsable,'Por responsable:') }}
        {{ form_errors(form.responsable) }}
        {{ form_widget(form.responsable,{'attr':{'class':'form-control'}}) }}
    </div>

    <div class="form-group col-lg-6">
        {{ form_label(form.fecha1,'Fecha adquisicion entre:') }}
        {{ form_errors(form.fecha1) }}
        <div ng-controller="DatepickerCtrl" class="row">
            <div class="col-md-5">
                <p class="input-group">
                    <input type="date" id="form_fecha1" name="form[fecha1]" required="required" class="form-control" datepicker-popup="yyyy-MM-dd" ng-model="dt" is-open="opened" min-date="'1990-06-22'" max-date="'2017-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                              <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                              </span>
                </p>
            </div>
            {% do form.fecha1.setRendered %}
        </div>
    </div>
    <div class="form-group col-lg-6">

        {{ form_label(form.fecha2,'Y:') }}
        {{ form_errors(form.fecha2) }}
        <div ng-controller="DatepickerCtrl" class="row">
            <div class="col-md-5">
                <p class="input-group">
                    <input type="date" id="form_fecha2" name="form[fecha2]" required="required" class="form-control" datepicker-popup="yyyy-MM-dd" ng-model="dt" is-open="opened" min-date="minDate" max-date="'2017-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
                              <span class="input-group-btn">
                                <button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                              </span>
                </p>
            </div>
            {% do form.fecha2.setRendered %}
        </div>
    </div>

    <br>
    <div class="form-group col-lg-6">
        <ul class="list-inline">
            <li> {{ form_widget(form.buscar) }}</li>
            <li> {{ form_widget(form.limpiar) }}</li>
        </ul>
    </div>
    {{ form_end(form) }}



{% endblock %}